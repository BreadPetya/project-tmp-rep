{
  "name": "Python Project",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "cat /workspaces/${localWorkspaceFolder}/.bashrc >> ~/.bashrc && source ~/.bashrc && pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "remoteUser": "codespace"
}